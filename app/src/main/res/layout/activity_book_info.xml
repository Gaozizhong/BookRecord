<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="cn.a1949science.www.bookrecord.activity.BookInfoActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">
        <Button
            android:id="@+id/book_info_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/returnbutton" />
        <ImageView
            android:id="@+id/book_info_vertivalline"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@mipmap/verticalline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="@string/bookName"/>
        <Button
            android:id="@+id/book_info_scan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="180dp"
            android:background="@mipmap/scan" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="201dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/bookName"
                android:textColor="@color/bookName"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/bookRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_starWidth="30dp"
                    app:srb_starHeight="30dp"
                    app:srb_starPadding="0dp"
                    app:srb_numStars="5"
                    app:srb_stepSize="0.1"
                    app:srb_rating="2"
                    app:srb_isIndicator="true"
                    app:srb_clickable="true"
                    app:srb_scrollable="true"
                    app:srb_clearRatingEnabled="true"
                    app:srb_drawableEmpty="@mipmap/star_empty"
                    app:srb_drawableFilled="@mipmap/star_full">
                </com.willy.ratingbar.ScaleRatingBar>

                <TextView
                    android:id="@+id/bookScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="@string/bookScore" />

            </LinearLayout>

            <TextView
                android:id="@+id/bookWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/bookWriter" />

            <TextView
                android:id="@+id/bookPressName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/bookPressName" />

            <TextView
                android:id="@+id/bookPressData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/bookPressData" />

            <TextView
                android:id="@+id/bookISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/bookISBN" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="wrap_content"
            android:layout_height="201dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/bookdemo" />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/book_info_wantRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="想读"
                android:background="@drawable/book_info_bg_border"
                android:textColor="@color/orange"/>
            <Button
                android:id="@+id/book_info_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="在读"
                android:background="@drawable/book_info_bg_border"
                android:textColor="#ff6702"
                />
            <Button
                android:id="@+id/book_info_haveRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:text="读过"
                android:background="@drawable/book_info_bg_border"
                android:textColor="#ff6702"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容简介"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/bookcontext"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="历史"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:orientation="vertical">
            <cn.a1949science.www.bookrecord.widget.MyListView
                android:id="@+id/book_info_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#eee"
                android:dividerHeight="10px"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#eee">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white">
    <Button
        android:id="@+id/advice_return_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/returnbutton"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/verticalline"
        android:contentDescription="TODO" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>
</android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/advice_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        android:hint="请提出您的宝贵意见"
        android:gravity="center_horizontal|center_vertical"
        android:textColorHint="#ccc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/advice_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#ff7302"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="#fff"
        />
</LinearLayout>
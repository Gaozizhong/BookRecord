<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="cn.a1949science.www.bookrecord.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/login"
            android:textSize="40sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/bg_border">

            <TextView
                android:id="@+id/chinaPhoneNumber"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="中国86" />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:background="@mipmap/verticalline"/>
            <EditText
                android:id="@+id/phoneNumber"
                android:maxLength="11"
                android:selectAllOnFocus="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:singleLine="true"/>
            <Button
                android:id="@+id/phoneNumberDelete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:background="@mipmap/delete" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/bg_border">

            <TextView
                android:id="@+id/TextVerification"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:text=" 验证码" />
            <ImageView
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:background="@mipmap/verticalline"/>
            <EditText
                android:id="@+id/verification"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColorHint="#95A1AA"
                android:inputType="phone"
                android:textSize="15sp" />
            <Button
                android:id="@+id/VerificationButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/getVerification"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_margin="20dp"
                android:id="@+id/wechat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/wechat" />

            <Button
                android:layout_margin="20dp"
                android:id="@+id/qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/qq" />

            <Button
                android:layout_margin="20dp"
                android:id="@+id/weibo"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@mipmap/webo" />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/btn_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:spinning_bar_width="4dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
    </RelativeLayout>
</LinearLayout>
